#!/usr/bin/env python

import os
import sys

sys.path.append(os.path.join(os.path.dirname(__file__), './src'))

from application import Application
from commands.bitcoin import JsonRpcCommand
from commands.docker import ExecCommand

APP_VERSION = 'v0.0.1'

# Instantiate the application
app = Application(__file__, APP_VERSION)

# Register application commands
app.register_command('exec', ExecCommand)
app.register_command('rpc', JsonRpcCommand)

# Start the application
sys.exit(app.run())
